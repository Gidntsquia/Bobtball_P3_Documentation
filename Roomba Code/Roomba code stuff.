Special Movement based things.

def lfollow_lcliff_smooth_until_bump()
     while leftIsNotBumped and rightIsNotBumped():
        if BlackFrontLeft():
            create_drive_direct(c.BASE_LM_POWER, c.LFOLLOW_SMOOTH_RM_POWER)
        else:
            create_drive_direct(c.LFOLLOW_SMOOTH_LM_POWER, c.BASE_RM_POWER)
            
            
            
def prismriver():
    m.turn_right()
    s.forwards_until_black_cliff(999999999)
    m.turn_left()
    s.lfollow_right_smooth_until_rcliff_senses_white()
    s.forwards_until_black_cliff()
    s.forwards_until_white_cliff()
    s.forwards_until_black_cliff()
    m.turn_left()
    m.turn_left()
    s.forwards_until_white_cliff()
    s.forwards_until_black_cliff()
    s.forwards_until_white_cliff()
    s.forwards_until_black_cliff()
    s.lfollow_left_smooth_until_bump()
    m.turn_right()
    m.turn_right()
    s.forwards_until_black_cliff()
    s.forwards_until_white_cliff()
    s.forwards_until_black_cliff()
    m.turn_left()
    s.lfollow_lfcliff_smooth_until_rfcliff_senses_black()
    m.turn_right()
    s.lfollow_lcliff_smooth(4000)
    m.turn_left()
    m.turn_left()
    
